@model QLSV.ModelViews.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="nk-decorated-h-3">
    <span>
        <span class="text-main-1">
            Sign
        </span>
        In
    </span>
</h3>
<div class="nk-gap-1"></div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post" action="@Url.Action("Login", "HocSinh")" class="nk-form text-white">
            <div class="nk-gap"></div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    Use email and password:
                    <div class="nk-gap"></div>
                    <input type="email" value="" name="gmail" class="required form-control" placeholder="Email">
                    <div class="nk-gap"></div>
                    <input type="password" value="" name="password" class="required form-control"
                           placeholder="Password">
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="nk-gap-1"></div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <input type="submit" value="Sign In" class="nk-btn nk-btn-rounded nk-btn-color-white nk-btn-block" />
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="nk-gap-1"></div>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <div class="mnt-5">
                        <small><a href="#">Forgot your password?</a></small>
                    </div>
                    <div class="mnt-5">
                        <small>
                            <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#modalRegister">
                                Not a member? Sign up
                            </a>
                        </small>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </form>
    </div>
    <div class="col-md-2"></div>
</div>
<div class="nk-gap-6"></div>
<div class="nk-gap-6"></div>
